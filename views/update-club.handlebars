<main>
  <h1 class="view-title">Update the info of {{data.club.name}}</h1>

  <fieldset class="update-club-form">
    <form id="update-form" action="/club-update/{{data.club.id}}" enctype="multipart/form-data">
      <div id="crest-section">
        <label for="crest">Crest
        <input type="file" id="crest" name="crestUrl">
        </label>
      </div>

      <div id="first-section">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="e.g., Arsenal FC">

        <label for="short-name">Short Name</label>
        <input type="text" id="short-name" name="shortName" placeholder="e.g., Arsenal">

        <label for="address">Address</label>
        <input type="text" id="address" name="address" placeholder="e.g., 75 Drayton Park London N5 1BU">

        <label for="phone">Phone</label>
        <input type="tel" id="phone" name="phone" placeholder="e.g., +44 (020) 76195003">
      </div>

      <div id="second-section">
        <label for="website">Website</label>
        <input type="url" id="website" name="website" placeholder="e.g., http://www.arsenal.com">
        

        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="e.g., info@arsenal.co.uk">
        

        <label for="founded">Founded</label>
        <input type="date" id="founded" name="founded" placeholder="e.g., 1886">
        

        <label for="club-colors">Club Colors</label>
        <div>
          <input type="color" id="club-colors" name="clubColorsA">
          <input type="color" id="club-colors" name="clubColorsB">
        </div>

        <label for="venue">Venue</label>
        <input type="text" id="venue" name="venue" placeholder="e.g., Emirates Stadium">
        
      </div>

      <div id="btn-section">
        <button type="submit" id="submit-update" data-club-id="{{data.club.id}}">Send</button>
      </div>
    </form>
  </fieldset>
</main>